{% extends "layoutSession.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/pages/admin/session/session.css">
{% endblock styles %}

{% block content %}
    <div class="session">
        <div class="subHeader">
            <h3>Esqueceu a Senha?</h3>
        </div>
    </div>
    <form action="/admin/user/forgot-password" id="newPassword" method="post">
        <div class="fields">

            <div class="item">
                <h3>Email</h3>
                <input type="text" name="email" placeholder="email@email.com" value="{{user.email}}">
            </div>

        </div>
        
        <div class="login">
            <p></p>
            <button type="submit" form="newPassword">Recuperar</button>
        </div>
        
    </form>

</div>

{% endblock content %}

{% block script %}
{% endblock script %}