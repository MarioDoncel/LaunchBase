{% extends "layoutSession.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/pages/admin/session/session.css">
{% endblock styles %}

{% block content %}
    <div class="session">
        <div class="subHeader">
            <h3>Iniciar Sess√£o</h3>
        </div>
    </div>
    <form action="/admin/user/login" id="loginSession" method="post">
        <div class="fields">

            <div class="item">
                <h3>Email</h3>
                <input 
                {% if errorEmail %}
                    class="error"
                {% endif %}  
                type="text" 
                name="email" 
                placeholder="Digite seu email" 
                value="{{user.email}}"
                onfocus="this.classList.remove('error')">
            </div>
            <div class="item">
                <h3>Senha</h3>
                <input 
                {% if errorPassword %}
                    class="error"
                {% endif %}  
                type="password" name="password" placeholder="Digite a senha" 
                onfocus="this.classList.remove('error')">
            </div>

        </div>

        <div class="login">
            <p onclick="window.location.href ='/admin/user/forgot-password'">Esqueceu a senha?</p>
            <button type="submit" form="loginSession">Acessar</button>
        </div>
        
    </form>

</div>

{% endblock content %}

{% block script %}
{% endblock script %}