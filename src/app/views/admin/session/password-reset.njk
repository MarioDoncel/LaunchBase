{% extends "layoutSession.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/pages/admin/session/session.css">
{% endblock styles %}

{% block content %}
    <div class="session">
        <div class="subHeader">
            <h3>Cadastrar senha</h3>
        </div>
    </div>
    <form action="/admin/user/password-reset" id="password-reset" method="post">
        <div class="fields">

            <div class="item">
                <h3>Email</h3>
                <input type="text" name="email" placeholder="email@email.com" value="{{user.email}}">
            </div>
            <div class="item">
                <h3>Nova senha</h3>
                <input type="text" name="password" placeholder="Digite sua nova senha">
            </div>
            <div class="item">
                <h3>Repetir senha</h3>
                <input type="text" name="passwordRepeat" placeholder="Repita a nova senha">
            </div>

        </div>
        
        <div class="login">
            <p></p>
            <button type="submit" form="password-reset">Nova Senha</button>
        </div>
        
        <input type="hidden" name="token" value="{{token}}">
    </form>

</div>

{% endblock content %}

{% block script %}
{% endblock script %}