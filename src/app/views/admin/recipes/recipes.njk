{% extends "layoutAdmin.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/pages/admin/recipes/recipes.css">
{% endblock styles %}


{% block title %}
    <title>Gerenciar receitas</title>
{% endblock title %}

{% block content %}
    <main class="list">
        <div class="subHeader">
            <h2 id="manage-recipes">Gerenciar receitas</h2>
            <div class="buttons">
                    <button type="button" onclick="location.href='/admin/recipes/create'">Novo</button>
            </div>     
        </div>
        <div class="cards admin">
            {% for recipe in recipes %}
            
            
            <div class="card admin-index">
                <div class="image-container admin">
                    {% if not recipe.src %}
                        <img src="http://placehold.it/500x500?text=RECEITA SEM FOTO" alt="Receita sem foto">
                    {% else  %}
                        <img src="{{recipe.src}}" alt="{{recipe.title}}">
                    {% endif %}
                    
                </div>
                <div class="index-details">
                    <div class="recipe-name">
                        <h4>{{recipe.title}}</h4>
                    </div>
                    <div class="author">
                        <p>por {{recipe.chef_name}}</p>
                    </div>
                    <div >
                        <a class="link-button" href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                        
                    </div>
                </div> 
                <input type="hidden" id="recipeId" name="recipeId" value="{{recipe.id}}">
            </div>
            
            {% endfor %}
        </div>
    </main>
{% endblock content %}



