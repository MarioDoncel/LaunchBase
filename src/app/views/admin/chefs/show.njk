{% extends "layoutAdmin.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/pages/admin/chefs/show.css">
    <link rel="stylesheet" href="/styles/pages/admin/recipes/recipes.css">
{% endblock styles %}

{% block content %}
    <div class="chef">
        <div class="subHeader">
            <h3>Chef:
                {{chef.name}}</h3>
            <a href="/admin/chefs/{{chef.id}}/edit">
                <button>Editar chef</button>
            </a>
        </div>
        <div class="image-container">
            <img src="{{chef.src}}" alt="{{chef.name}}">
        </div>
        <div class="chef-name">
            <h4>{{chef.name}}</h4>
        </div>
        <div class="total_recipes">
            <p>{{chef.total_recipes}} receita{% if chef.total_recipes > 1 %}s{%endif%}</p>
        </div>
    </div>
    <h2 id="manage-recipes">Receitas</h2>
        <div class="cards admin">
            {% for recipe in recipes %}
            
            <div class="card admin-index">
                <div class="image-container admin">
                    {% if not recipe.src %}
                        <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO" alt="Receita sem foto">
                    {% else %}
                        <img src="{{recipe.src}}" alt="{{recipe.title}}" onclick="Lightbox.open(event)">
                    {% endif %}
                </div>
                <div class="index-details">
                    <div class="recipe-name">
                        <h4>{{recipe.title}}</h4>
                    </div>
                    <div class="author">
                        <p>{{recipe.author}}</p>
                    </div>
                    <div >
                        <a class="link-button" href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

{% endblock content %}

{% block script %}{% endblock script %}