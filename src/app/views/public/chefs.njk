{% extends "layoutAdmin.njk" %}

{% block title %}
        <title>Gereciar chefs</title>
        {% endblock title %}

{% block content %}
    <main>
        <div class="cards admin chefs ">
            {% for chef in chefs %}
            
            <div class="card admin-index">
                <div class="image-container admin chefs">
                    <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                </div>
                <div class="index-details chefs">
                    <div class="chef-name">
                        <h4>{{chef.name}}</h4>
                    </div>
                    <div >
                        <div class="total_recipes">
                        <h4>{{chef.total_recipes}} receitas</h4>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
</main>
{% endblock content %}