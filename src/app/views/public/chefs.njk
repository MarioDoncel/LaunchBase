{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/pages/public/chefs.css">
{% endblock styles %}

{% block title %}
        <title>Chefs</title>
        {% endblock title %}

{% block content %}
    <main>
        <div class="cardsChefs">
            {% for chef in chefs %}
                <div class="card">
                    <div class="image-container">
                        <img src="{{chef.src}}" alt="{{chef.name}}">
                    </div>
                    <div class="index-details chefs">
                        <div class="chef-name">
                            <h4>{{chef.name}}</h4>
                        </div>
                        <div >
                            <div class="total_recipes">
                            <p>{{chef.total_recipes}} receita{% if chef.total_recipes > 1 %}s
                            {% endif %} </p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
</main>
{% endblock content %}