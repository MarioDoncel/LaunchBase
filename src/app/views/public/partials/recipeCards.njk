<div class="cards">
    {% for recipe in recipes %}

        <div class="card" onclick= "window.location.href = '/recipes/{{recipe.id}}'">
            <div class="image-container">
                <img src="{{recipe.image}}" alt="{{recipe.title}}">
            </div>
            <div class="recipe-name">
                <h4>{{recipe.title}}</h4>
            </div>
            <div class="author">
                <p>{{recipe.chef_name}}</p>
            </div>

        </div>
    {% endfor %}
</div>