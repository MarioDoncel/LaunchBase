{% extends "layout.njk" %}

{% block content %}
    <div class="recipe">
        <div class="gallery">
            <div class="highlight image-container">
                {% if not files[0] %}
                    <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO" alt="Receita sem foto">
                {% else %}
                    <img src="{{files[0].src}}" alt="{{files[0].name}}" onclick="Lightbox.open(event)">
                {% endif %}
                <div class="lightbox-target">
                    <img src="{{files[0].src}}" alt="{{files[o].name}}">
                    <a href="#" class="lightbox-close" onclick="Lightbox.close()">
                        <i class="material-icons">close</i>
                    </a>
                </div>
            </div>
            <div class="gallery-preview">
                {% for file in files %}
                    <img 
                        src="{{file.src}}" 
                        alt="{{file.name}}" 
                        {%if loop.index0 == 0%} class="active" {%endif%} 
                        onclick="ImageGallery.setImage(event)">
                {% endfor %}
            </div>
        </div>
        <div class="recipe-name">
            <h4>{{recipe.title}}</h4>
        </div>
        <div class="author">
            <p>{{recipe.chef_name}}</p>
        </div>
    </div>
    <div class="recipeInformation">
        <div class="ingredients">
            <h3>Ingredientes <span class="active">esconder</span></h3>
            <ul>
                {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
                {% endfor %}
            </ul>
    </div>
    <div class="preparation">
        <h3>Modo de preparo <span class="active">esconder</span></h3>
        <ul>
            {% for step in recipe.preparation %}
            <li>{{step}}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="information">
        <h3>Informações adicionais <span class="active">esconder</span></h3>
        <p>{{recipe.information}}</p>
    </div>
{% endblock content %}

{% block script %}
<script src="/recipeScript.js"></script>
<script src="/galleryScript.js"></script>
{% endblock script %}